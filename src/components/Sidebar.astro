---
import SidebarFooter from "./SidebarFooter.astro";
import SidebarMenuRubi from "./SidebarMenuRubi.astro";
import SidebarMenuBrand from "./SidebarMenuBrand.astro";
import { Image } from 'astro:assets';
const { sideBarActiveItemID } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<div class="drawer-side z-40">
    <label for="my-drawer" class="drawer-overlay"></label>
    <aside class="px-2 pt-2 h-auto min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col justify-between divide-y divide-gray-300">
        <div>
            <div class="w-fit mx-auto">
                <a href={baseUrl} >
                    <div class="transition ease-in-out hover:scale-[102%] block m-auto">
                        <div class="w-[8.5rem]">
                        <Image src={baseUrl + "/images/profile.webp"} alt="Profile image" class="mask mask-circle" format="webp" width="300" height="300" />
                        </div>
                    </div>
                </a>
            </div>
            <SidebarMenuRubi sideBarActiveItemID={sideBarActiveItemID} />
        </div>

        <div class="pt-10">
            <div class="w-fit mx-auto">
                <a href="https://frasquitogames.com/" target="_blank" >
                    <div class="transition ease-in-out hover:scale-[102%] block m-auto">
                        <div class="w-[8.5rem]">
                        <Image src={baseUrl + "/images/fg.png"} alt="Frasquito Games Logo" format="webp" width="300" height="300" />
                        </div>
                    </div>
                </a>
            </div>
            <SidebarMenuBrand sideBarActiveItemID={sideBarActiveItemID} />
        </div>


        <SidebarFooter />
    </aside>
</div>

<style>
    .mask {
        mask-position: 0% 25%; 
    }
</style>