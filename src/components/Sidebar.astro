---
import { t } from "i18next";
import SidebarMenuRubi from "./SidebarMenuRubi.astro";
import SidebarMenuBrand from "./SidebarMenuBrand.astro";
import { Image } from 'astro:assets';
import SidebarSocialBrand from "./SidebarSocialBrand.astro";
import SidebarSocialRubi from "./SidebarSocialRubi.astro";

const { sideBarActiveItemID } = Astro.props;
//const baseUrl = import.meta.env.BASE_URL;
const baseUrl = '';
---

<div class="drawer-side z-40">
    <label for="my-drawer" class="drawer-overlay"></label>
    <aside class="px-2 pt-2 min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col">
        <div class="h-1/2 mb-5">
            <div class="flex justify-between">
                <div class="divider my-0 w-1/4" />
                <text class="text-sm font-bold text-center">Rubén Rodríguez</text>
                <div class="divider my-0 w-1/4" />
            </div>

            <SidebarSocialRubi />

            <div class="w-fit mx-auto flex flex-col justify-center">
                <a href={baseUrl} >
                    <div class="transition ease-in-out hover:scale-[102%] block m-auto">
                        <div class="w-[8.5rem]">
                        <Image src={baseUrl + "/images/profile.webp"} alt="Profile image" class="mask mask-circle" format="webp" width="300" height="300" />
                        </div>
                    </div>
                </a>
            </div>

            <SidebarMenuRubi sideBarActiveItemID={sideBarActiveItemID} />
        </div>

        <div class="h-1/2 mt-5 custombp:hidden">
            <div class="flex justify-between">
                <div class="divider my-0 w-1/4" />
                <div class="flex flex-col">
                    <text class="text-sm font-bold text-center">Frasquito Games</text>
                    <text class="text-sm text-center">{t("sidebar.brand.subtitle")}</text>
                </div>
                <div class="divider my-0 w-1/4" />
            </div>

            <SidebarSocialBrand />

            <div class="w-fit mx-auto flex flex-col justify-center">
                <a href="https://frasquitogames.com/" target="_blank" >
                    <div class="transition ease-in-out hover:scale-[102%] block m-auto">
                        <div class="w-[8.5rem]">
                        <Image src={baseUrl + "/images/brand_logo.png"} alt="Frasquito Games Logo" format="webp" width="300" height="300" />
                        </div>
                    </div>
                </a>

            </div>

            <SidebarMenuBrand sideBarActiveItemID={sideBarActiveItemID} />
        </div>

    </aside>
</div>

<style>
    .mask {
        mask-position: 0% 25%; 
    }
</style>