---
const {category} = Astro.props;

const classStr_base = "my-auto text-xs inline-flex items-center font-bold leading-sm uppercase px-3 py-1 rounded-full";
const classStr_personal = " bg-blue-200  text-blue-700";
const classStr_professional = " bg-green-200  text-green-700";

const classStr = classStr_base + (category == "personal" ? classStr_personal : classStr_professional);
---

<div class = {classStr}>
    <svg 
        xmlns="http://www.w3.org/2000/svg" 
        class="mr-2" 
        width="16" 
        height="16" 
        viewBox="0 0 24 24" 
        stroke-width="2" 
        stroke="currentColor" 
        fill="none" 
        stroke-linecap="round" 
        stroke-linejoin="round"
    >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        {category === "personal" && (<path d="M22 9l-10 -4l-10 4l10 4l10 -4v6" /> <path d="M6 10.6v5.4a6 3 0 0 0 12 0v-5.4" />)}
        {category === 'professional' && (<path d="M3 4a1 1 0 0 1 1 -1h16a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-16a1 1 0 0 1 -1 -1v-12z" /><path d="M3 13h18" /><path d="M8 21h8" /><path d="M10 17l-.5 4" /><path d="M14 17l.5 4" />)}
    </svg>

    {category === "personal" && "personal"}
    {category === "professional" && "profesional"}

</div>