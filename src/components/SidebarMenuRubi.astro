---
import { t } from "i18next";
import { localizePath } from "astro-i18next";
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu menu-md overflow-y-auto">
    <li><a class="py-3 text-base" id="home" href={localizePath("/")} >{t("sidebar.rubi.home")}</a></li>
    <li><a class="py-3 text-base" id="projects" href={localizePath("/projects")}>{t("sidebar.rubi.projects")}</a></li>
    <li><a class="py-3 text-base" id="cv" href={localizePath("/cv")}>{t("sidebar.rubi.cv")}</a></li>
    <li><a class="py-3 text-base" href="mailto:contact.rubi_almansa@hotmail.com" target="_blank" referrerpolicy="no-referrer-when-downgrade">{t("sidebar.rubi.contact")}</a></li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
    const activeItemElem = document.getElementById(sideBarActiveItemID);
    activeItemElem && activeItemElem.classList.add(activeClass);
</script>